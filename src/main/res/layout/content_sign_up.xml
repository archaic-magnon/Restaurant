<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@+id/toolbar"
    tools:context="com.adl.app.restaurant.SignUp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_sign_up"
    android:background="@drawable/bg">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@drawable/timg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="37dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/sback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="10dp"
                android:src="@drawable/left" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="90dp"
            android:layout_height="120dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="110dp"
            android:background="@drawable/register" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/imageView2">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:orientation="vertical">

                    <Spinner
                        android:id="@+id/spinnerSalutation"
                        android:layout_width="170dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="22dp"
                        android:layout_marginRight="35dp"
                        android:layout_marginTop="35dp"
                        android:elevation="12dp"
                        android:entries="@array/salutation_arrays"
                        android:padding="16dp"
                        android:persistentDrawingCache="animation"
                        android:popupBackground="@android:color/background_light"
                        android:prompt="@string/salutation_prompt"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="40dp"
                        android:layout_marginRight="40dp"
                        android:background="#ADCCE2" />

                    <EditText
                        android:id="@+id/firstname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="22dp"
                        android:layout_marginRight="35dp"
                        android:background="#0000"
                        android:hint="First Name"
                        android:inputType="text"
                        android:padding="16dp"
                        android:textColor="#ADCCE2"
                        android:textColorHint="#ADCCE2"
                        android:textSize="16dp" />




                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="40dp"
                        android:layout_marginRight="40dp"
                        android:background="#ADCCE2" />

                    <EditText
                        android:id="@+id/middlename"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="22dp"
                        android:layout_marginRight="35dp"
                        android:background="#0000"
                        android:hint="Middle Name"
                        android:inputType="text"
                        android:padding="16dp"
                        android:textColor="#ADCCE2"
                        android:textColorHint="#ADCCE2"
                        android:textSize="16dp" />



                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="40dp"
                        android:layout_marginRight="40dp"
                        android:background="#ADCCE2" />

                    <EditText
                        android:id="@+id/lastname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="22dp"
                        android:layout_marginRight="35dp"
                        android:background="#0000"
                        android:hint="LastName"
                        android:inputType="text"
                        android:padding="16dp"
                        android:textColor="#ADCCE2"
                        android:textColorHint="#ADCCE2"
                        android:textSize="16dp" />



                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="40dp"
                        android:layout_marginRight="40dp"
                        android:background="#ADCCE2" />


                    <EditText
                        android:id="@+id/email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="22dp"
                        android:layout_marginRight="35dp"
                        android:background="#0000"
                        android:hint="Email"
                        android:inputType="text|textEmailAddress"
                        android:padding="16dp"
                        android:textColor="#ADCCE2"
                        android:textColorHint="#ADCCE2"
                        android:textSize="16dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="40dp"
                        android:layout_marginRight="40dp"
                        android:background="#ADCCE2" />

                    <EditText
                        android:id="@+id/mobile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="22dp"
                        android:layout_marginRight="35dp"
                        android:background="#0000"
                        android:hint="Mobile"
                        android:inputType="phone"
                        android:maxLength="12"
                        android:padding="16dp"
                        android:textColor="#ADCCE2"
                        android:textColorHint="#ADCCE2"
                        android:textSize="16dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="40dp"
                        android:layout_marginRight="40dp"
                        android:background="#ADCCE2" />

                    <EditText
                        android:id="@+id/dob"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="22dp"
                        android:layout_marginRight="35dp"
                        android:background="#0000"
                        android:hint="DOB dd/mm/yyyy"
                        android:inputType="date"
                        android:maxLength="12"
                        android:padding="16dp"
                        android:textColor="#ADCCE2"
                        android:textColorHint="#ADCCE2"
                        android:textSize="16dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="40dp"
                        android:layout_marginRight="40dp"
                        android:background="#ADCCE2" />

                    <EditText
                        android:id="@+id/anv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="22dp"
                        android:layout_marginRight="35dp"
                        android:background="#0000"
                        android:hint="Anniversary"
                        android:inputType="date"
                        android:maxLength="12"
                        android:padding="16dp"
                        android:textColor="#ADCCE2"
                        android:textColorHint="#ADCCE2"
                        android:textSize="16dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="40dp"
                        android:layout_marginRight="40dp"
                        android:background="#ADCCE2" />


                    <TextView
                        android:id="@+id/sin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="28dp"
                        android:layout_marginLeft="40dp"
                        android:layout_marginRight="40dp"
                        android:layout_marginTop="32dp"
                        android:background="@drawable/angle"
                        android:gravity="center"
                        android:padding="16dp"
                        android:text="Register"
                        android:textColor="@android:color/background_dark"
                        android:textSize="16dp" />
                </LinearLayout>
            </ScrollView>
        </RelativeLayout>

    </RelativeLayout>
</FrameLayout>
